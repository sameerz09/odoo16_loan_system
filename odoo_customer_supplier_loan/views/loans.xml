<odoo>
    <data>
          <record id="partner_view_loan_form" model="ir.ui.view">
            <field name="name">loan.form</field>
            <field name="model">partner.loan.details</field>
            <field name="arch" type="xml">
                <form string="Loan" version="7.0">
                    <header>

                        <button string="Apply" type="object" name="action_applied" groups="base.group_user" class="oe_highlight"
                            states="draft" />
                        <button name="compute_installments" class="oe_highlight" groups="account.group_account_invoice,odoo_customer_supplier_loan.partner_loan_group_user,odoo_customer_supplier_loan.partner_loan_group_manager"
                            colspan="2" states="applied" string="Compute" type="object"
                            help="Compute Installments or change the state according
                            to the disbursement type for loan request or repayment
                            type in case of installments" />
                        <button string="Approve" type="object" name="action_approved" class="oe_highlight" groups="odoo_customer_supplier_loan.partner_loan_group_islamic_manager,odoo_customer_supplier_loan.partner_loan_group_commercial_manager"
                            states="applied"/>
                        <button string="Reject" type="object" groups="odoo_customer_supplier_loan.partner_loan_group_islamic_manager,odoo_customer_supplier_loan.partner_loan_group_commercial_manager"
                            name="action_rejected" states="applied,approved" />
                        <button string="Reset To Draft" type="object" name="action_reset" states="cancel,rejected" groups="odoo_customer_supplier_loan.partner_loan_group_islamic_manager,odoo_customer_supplier_loan.partner_loan_group_commercial_manager"/>

                        <button string="Cancel" type="object" name="action_cancel"
							states="draft" groups="odoo_customer_supplier_loan.partner_loan_group_islamic_manager,odoo_customer_supplier_loan.partner_loan_group_commercial_manager"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,applied,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="partner_id" class="oe_edit_only" />
                            <h1>
                                <field name="partner_id" on_change="onchange_employee_id(partner_id)" />
                            </h1>
                            <label for="name" class="oe_edit_only" />
                            <h2>
                                <field name="name" />
                            </h2>
                            <h2>
                                <field name="fac_id" />
                            </h2>
                        </div>
                        <group>
                            <group>
                          <!--      <field name="curr" width="20%%"
                                       class="oe_inline"
                                       attrs="{'readonly': [('state', 'in', [approved,paid,1disburse,2disburse,disburse,rejected,closed,cancel])]}"

                                /> -->
                                <field name="guarantor_id" width="20%%"
                                       class="oe_inline"
                                       attrs="{'readonly': [('state', 'in', ['approved','paid','1disburse','2disburse','disburse','rejected','closed','cancel'])]}"

                                />
                                <field name="employee_id" width="20%%"
                                       class="oe_inline"
                                       attrs="{'readonly': [('state', 'in', ['approved','paid','1disburse','2disburse','disburse','rejected','closed','cancel'])]}"

                                />
                                <field name="date_applied" width="20%%"
                                       class="oe_inline"
                                       attrs="{'readonly': [('state', 'in', ['approved','paid','1disburse','2disburse','disburse','rejected','closed','cancel'])]}"/>
                                <field name="loan_prog"  width="20%%"
                                       class="oe_inline"
                                       attrs="{'readonly': [('state', 'in', ['approved','paid','1disburse','2disburse','disburse','rejected','closed','cancel'])]}"

                                />
                                <field name="loan_class" width="20%%"
                                       class="oe_inline"
                                       attrs="{'readonly': [('state', 'in', ['approved','paid','1disburse','2disburse','disburse','rejected','closed','cancel'])]}"
                                />
                                <field name="loan_type" widget="selection" on_change="onchange_loan_type(loan_type,partner_id)" />
                                <field name="no_paym"  width="20%%"
                                       class="oe_inline"
                                       attrs="{'readonly': [('state', 'in', ['approved','paid','1disburse','2disburse','disburse','rejected','closed','cancel'])]}"
                                />
                               <field name="first_payment" width="20%%" class="oe_inline"/>
                                <field name="seconed_payment"  width="20%%" class="oe_inline"/>
                                <field name="third_payment" width="20%%" class="oe_inline"/>
                                <field name="governorate" width="20%%" class="oe_inline" attrs="{'readonly': [('state', 'in', ['approved','paid','1disburse','2disburse','disburse','rejected','closed','cancel'])]}"/>







                              <!--  <field name="loan_partner_type"/>  -->


                            </group>
                            <group>
                                <field name="date_approved"/>
                               <field name="date_disb"

                                       width="20%%"
                                       class="oe_inline"
                                       attrs="{'readonly': [('state', 'in', ['approved','paid','1disburse','2disburse','disburse','rejected','closed','cancel'])]}"
                                />
                           <!--     <field name="actual_grant_date"
									   groups="account.group_account_invoice"
                                       width="20%%"
                                       class="oe_inline"
                                /> !-->
                                <field name="date_disb_grace"
                                       width="20%%"
                                       class="oe_inline"
                                />
                                <field name="grace_period"
                                       width="20%%"
                                       class="oe_inline"
                                       attrs="{'readonly': [('state', 'in', ['approved','paid','1disburse','2disburse','disburse','rejected','closed','cancel'])]}"
                                />
                                <field name="org_fund"
                                       width="20%%"
                                       class="oe_inline"
                                       attrs="{'readonly': [('state', 'in', ['approved','paid','1disburse','2disburse','disburse','rejected','closed','cancel'])]}"
                                />
                                <field name="organ"
                                       width="20%%"
                                       class="oe_inline"
                                       attrs="{'invisible':[('org_fund', '=', 'gov')]}"
                                />
                                <field name="branch"
                                       width="20%%"
                                       class="oe_inline"
                                />


                                <!--								<field name="department_id"/-->
                                <field name="company_id" groups="base.group_multi_company" widget="selection" />
                                <field name="user_id" />
                                <field name="first_dis_date" width="20%%" class="oe_inline"/>
                                <field name="second_dis_date" width="20%%" class="oe_inline"/>
                                <field name="third_dis_date" width="20%%" class="oe_inline"/>
                                <field name="agri_type" width="20%%" class="oe_inline" attrs="{'readonly': [('state', 'in', ['approved','paid','1disburse','2disburse','disburse','rejected','closed','cancel'])]}"/>
                                <field name="sub_agri_type" width="20%%" class="oe_inline" />
                                <field name="resch_times" width="20%%" class="oe_inline"/>
                                <field name="class_comp" width="20%%" class="oe_inline"/>


                            </group>
                        </group>
<!--                        <notebook attrs="{'invisible': [('groups', 'in', ['odoo_customer_supplier_loan.partner_loan_branch_employee'])]}">-->
                        <notebook >

                            <page string="General" groups="odoo_customer_supplier_loan.partner_loan_group_commercial_manager,odoo_customer_supplier_loan.partner_loan_group_islamic_manager,odoo_customer_supplier_loan.partner_loan_first_payment_approv,odoo_customer_supplier_loan.partner_loan_second_payment_approv,odoo_customer_supplier_loan.partner_loan_first_disb_approv,odoo_customer_supplier_loan.partner_loan_second_disb_approv,odoo_customer_supplier_loan.partner_loan_first_resch_approv,odoo_customer_supplier_loan.partner_loan_second_resch_approv,odoo_customer_supplier_loan.partner_loan_group_manager_read" required="False">
>
                                <group>
                                    <field name="currency_id" groups="base.group_multi_currency"/>
                                    <field name="principal_amount" widget="monetary" options="{'currency_field': 'currency_id'}"
                                        />
                                    <field name="int_payable" />
                                    <field name="interest_mode" />
                                    <field name="duration" />
                                    <field name="dgrace" attrs="{'invisible':[('grace_period','=', '0')]}" />
                                    <field name="partner_gross" groups="odoo_customer_supplier_loan.partner_loan_group_manager,odoo_customer_supplier_loan.partner_loan_group_user" required="False"
                                        invisible="1" />
                                    <field name="int_rate" />
                                    <field name="max_loan_amt" invisible="1" attrs="{'invisible':[('state','in',['draft','cancel'])]}"
                                        />
                                </group>
                                <newline />
<!--                                <field name="installment_lines" readonly="0" nolabel="1" groups="odoo_customer_supplier_loan.partner_loan_group_manager" required="False">-->
                                    <field name="installment_lines" readonly="0" nolabel="1" groups="odoo_customer_supplier_loan.partner_loan_group_commercial_manager,odoo_customer_supplier_loan.partner_loan_group_islamic_manager,odoo_customer_supplier_loan.partner_loan_first_payment_approv,odoo_customer_supplier_loan.partner_loan_second_payment_approv,odoo_customer_supplier_loan.partner_loan_first_disb_approv,odoo_customer_supplier_loan.partner_loan_second_disb_approv,odoo_customer_supplier_loan.partner_loan_first_resch_approv,odoo_customer_supplier_loan.partner_loan_second_resch_approv,odoo_customer_supplier_loan.partner_loan_group_manager_read" required="False">

                                    <tree editable="top" string="Installments">
                                        <field name="install_no" />
                                        <field name="date_from" />
                                        <field name="date_to" />
                                        <field name="payment_date"/>
                                        <field name="principal_amt" widget="monetary" options="{'currency_field': 'currency_id'}"
                                            sum="Principal" />
                                        <field name="interest_amt" widget="monetary" options="{'currency_field': 'currency_id'}"
                                            sum="Interest" />
                                        <field name="tot_sum" widget="monetary" options="{'currency_field': 'currency_id'}"
                                            sum="Paid" />
                                        <field name="tot_due" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <field name="total" widget="monetary"  options="{'currency_field': 'currency_id'}"
                                            attrs="{'readonly': [('state', '=', 'paid')]}" sum="Total" />
                                  <!--      <field name="paid" widget="monetary"  options="{'currency_field': 'currency_id'}"
                                            attrs="{'readonly': [('state', '=', 'paid')]}" sum="Total" />  -->
                                        <field name="remains" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <field name="state" />
                                        <field name="currency_id" groups="base.group_multi_currency"/>
                                        <field name="int_move_id" invisible="1" />
                                        <button name="pay_installment" confirm="You are trying to create EMI for this loan
                                            so make sure loan repayment for this loan
                                            type is not from payroll !" states="approve"
                                            string="Pay" type="object"
                                            icon="fa-hand-o-right"
                                            help="Pay Installment" />
                                        <button name="book_interest" attrs="{'invisible':['|', ('interest_amt', '=', 0.0),
                                            ('int_move_id', '!=', False)]}" string="Book
                                            Interest" type="object" icon="fa-check"
                                            help="Book Interest" />
                                        <button name="action_approve" states="unpaid" string="Approve Payment" type="object"
                                            icon="fa-level-down fa-rotate-90" help="Approve Payment" />
                                        <button name="action_reset" states="approve" string="Reset To Draft" type="object"
                                            icon="fa-level-down fa-rotate-90"
                                            help="Reset To Draft" />

                                    </tree>
                                </field>
                                <group>
                                    <group>
                                        <field name="sumation" colspan="2" widget="monetary" options="{'currency_field':
                                            'currency_id'}"/>
                                        <field name="final_total" colspan="2" widget="monetary" options="{'currency_field':
                                            'currency_id'}"/>
                                        <field name="cus_rec" colspan="2" widget="monetary" options="{'currency_field':
                                            'currency_id'}"/>
                                        <field name="total_interest_amount" colspan="2" widget="monetary" options="{'currency_field':
                                            'currency_id'}"/>

                                        <field name="total_amount_paid" colspan="2" widget="monetary" options="{'currency_field':
                                            'currency_id'}"/>
                                        <field name="total_amount_due" colspan="2" widget="monetary" options="{'currency_field':
                                            'currency_id'}"/>
                                    </group>
                                    <newline />
                                </group>
                            </page>
                            <page string="Proofs" groups="odoo_customer_supplier_loan.partner_loan_group_commercial_manager,odoo_customer_supplier_loan.partner_loan_group_islamic_manager,odoo_customer_supplier_loan.partner_loan_first_payment_approv,odoo_customer_supplier_loan.partner_loan_second_payment_approv,odoo_customer_supplier_loan.partner_loan_first_disb_approv,odoo_customer_supplier_loan.partner_loan_second_disb_approv,odoo_customer_supplier_loan.partner_loan_first_resch_approv,odoo_customer_supplier_loan.partner_loan_second_resch_approv,odoo_customer_supplier_loan.partner_loan_group_manager_read" required="False">
>
                                <field name="loan_proof_ids" colspan="2" nolabel="1" />
                            </page>
                            <page string="Accounting"  groups="odoo_customer_supplier_loan.partner_loan_group_commercial_manager,odoo_customer_supplier_loan.partner_loan_group_islamic_manager,odoo_customer_supplier_loan.partner_loan_first_payment_approv,odoo_customer_supplier_loan.partner_loan_second_payment_approv,odoo_customer_supplier_loan.partner_loan_first_disb_approv,odoo_customer_supplier_loan.partner_loan_second_disb_approv,odoo_customer_supplier_loan.partner_loan_first_resch_approv,odoo_customer_supplier_loan.partner_loan_second_resch_approv,odoo_customer_supplier_loan.partner_loan_group_manager_read">
                                <group>
                                    <group>
                                        <field name="journal_id" colspan="2" />
									    <field name="disbursed_account_id"/>
                                        <field name="move_id" colspan="2" />
                                        <field name="journal_id1" />
                                        <field name="partner_loan_account" colspan="2" />
                                    </group>
                                    <group>
                                        <field name="journal_id2" />
                                        <field name="interest_account_id"/>
                                        <field name="interest_receivable_account_id"/>
                                        <field name="interest_loan_journal"/>

                                    </group>
                                </group>
                            </page>
                            <page string="Policies"
								groups="odoo_customer_supplier_loan.partner_loan_group_commercial_manager,odoo_customer_supplier_loan.partner_loan_group_islamic_manager,odoo_customer_supplier_loan.partner_loan_first_payment_approv,odoo_customer_supplier_loan.partner_loan_second_payment_approv,odoo_customer_supplier_loan.partner_loan_first_disb_approv,odoo_customer_supplier_loan.partner_loan_second_disb_approv,odoo_customer_supplier_loan.partner_loan_first_resch_approv,odoo_customer_supplier_loan.partner_loan_second_resch_approv,odoo_customer_supplier_loan.partner_loan_group_manager_read" required="False">>
                                <separator string="Policies" colspan="4" />
                                <field name="loan_policy_ids" nolabel="1" colspan="4" />
                            </page>
                            <page string="Notes">
                                <field name="notes" colspan="2" nolabel="1" />
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"
                            />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <record id="partner_view_loan_tree" model="ir.ui.view">
            <field name="name">partner.loan.policy.tree</field>
