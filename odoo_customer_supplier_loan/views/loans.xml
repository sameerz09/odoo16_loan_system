            <field name="domain">['|', '|', '|', ('state','=','approved'),('state','=','disburse'),('state','=','1disburse'),('state','=','2disburse'),('loan_class','=','islamic')]</field>
            <field name="help">This is the view where the loan request will be
				encoded</field>
        </record>
