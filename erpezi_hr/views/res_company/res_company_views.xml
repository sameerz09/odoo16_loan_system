<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payroll_res_company_view_form" model="ir.ui.view">
        <field name="name">payroll.res.company.view.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                  <field name="last_attendants_schedule_work_date"/>
                  <field name="last_attendants_schedule_work_total"/>
            </xpath>
        </field>
    </record>

</odoo>